<%= form_for(@item) do |f| %>
  <% if @item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
      <% @item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name, required: true %>
  </div>
  <div class="field">
    <%= f.label :desc %><br>
    <%= f.text_field :desc, required: true %>
  </div>
  <div class="field">
    <%= f.label :category_id %><br>
    <%= f.collection_select :category_id, Category.all, :id, :name, :prompt => 'Select One' %>
  </div>
  <div class="field">
    <%= f.label :price %><br>
    <%= f.text_field :price, required: true %>
  </div>
  <div class="field">
    <%= f.label :stock %><br>
    <%= f.text_field :stock, required: true %>
  </div>
  <div>
    <%= f.label :cover %><br>
    <%= f.file_field :cover, required: true %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
